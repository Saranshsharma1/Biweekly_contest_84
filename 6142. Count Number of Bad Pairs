class Solution {
public:
    long long countBadPairs(vector<int>& nums) {
        int n = nums.size();
        int pair = 0;
        for(int i=0;i<n;i++){
            for(int j=i;j<n;j++){
                if( i<j and (j - i) != (nums[j] - nums[i]) ){pair++;}
            }
        }
        
        return pair;
    }
};


